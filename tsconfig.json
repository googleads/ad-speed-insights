{
  "compilerOptions": {
    "noEmit": true,
    "module": "CommonJS",
    "target": "ES2017",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ]
  },
  "include": [
    "**/*.js",
    "**/*.d.ts",
  ],
  "exclude": [
    "test/**/*.js",
    "visual-report/**",
  ]
}
